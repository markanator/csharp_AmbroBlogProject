@model IEnumerable<AmbroBlogProject.Models.Comment>

@{
    ViewData["Title"] = "All Site Comments";
}

<div class="axil-breadcrumb-area breadcrumb-style-1 bg-color-grey">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner d-flex justify-content-between align-items-center">
                    <h1 class="page-title">@ViewData["SubText"]</h1>
                    <a asp-action="Create" class="btn btn-success">Create New</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mx-auto py-4">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Post)
                </th>
                <th>
                    Author
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Body)
                </th>
                <th>
                    Posted
                </th>
                <th>
                    Modified
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Moderator)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModerationType)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
                <tr class="fs-6">
                    <td>
                        @Html.DisplayFor(modelItem => item.Post.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BlogUser.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Body)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        @(item.Moderated ?? item.Deleted)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Moderator.FullName)
                    </td>
                    <td>
                        @(item.Moderated !=null || item.Deleted != null ? item.ModerationType: "")
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
        </tbody>
    </table>
</div>
